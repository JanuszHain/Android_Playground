<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".viewspresenters.main.MainMenuFragment">

    <Button
        android:id="@+id/persons_internet"
        style="@style/ButtonTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:onClick="onClickInternetPersons"
        android:text="Persons from Internet" />

    <Button
        android:id="@+id/saved_persons"

        style="@style/ButtonTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:onClick="onClickSavedPersons"
        android:text="Saved persons" />
</LinearLayout>


